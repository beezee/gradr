<%= provide :title, 'Dashboard' %>
<div>
  <div class="pull-right">
    <a class="btn blue btn-sm" href="javascript:(function(){var i=document.getElementById('gradr-iframe')||document.createElement('iframe'),u=window.location.href;i.style.position='fixed';i.style.top='50px';i.style.right='10px';i.style.width='200px';i.style.height='800px';i.id='gradr-iframe';i.src='//<%= ENV['APP_URL'] %>/scorecard/?url='+u;if(!document.getElementById('gradr-iframe'))document.body.appendChild(i);}());">
      GRADR
    </a>
    <span class="label label-info">Click and drag to your bookmarks bar to grade any page on the web</span>
  </div><br />
  <hr />
</div>
<div class="portlet box blue">
  <div class="portlet-title">
    You Graded
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Gradee</th>
            <th>2 week average</th>
            <th>2 month average</th>
            <th>Stats</th>
          </tr>
        </thead>
        <tbody>
          <% @gradees.each do |gradee| %>
          <tr>
            <td>
             <%= gradee.email %>
            </td>
            <td>
              <%= gradee.average_score_by_grader_since(current_user.id, 2.weeks.ago) %>
            </td>
            <td>
              <%= gradee.average_score_by_grader_since(current_user.id, 2.months.ago) %>
            </td>
            <td>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="portlet box blue">
  <div class="portlet-title">
    Graded You
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Grader</th>
            <th>Last scored</th>
            <th>Stats</th>
          </tr>
        </thead>
        <tbody>
          <% @graders.uniq.each do |grader| %>
          <tr>
            <td>
             <%= grader.email %>
            </td>
            <td>
              <%= grader.grader_scorecards.order('updated_at DESC').find_by(gradee_id: current_user.id).updated_at.strftime "%m/%d/%Y" %>
            </td>
            <td>
            </td>
          </tr>
          <% end %>
        </tbody>
        <%= will_paginate @graders %>
      </table>
    </div>
  </div>
</div>
